#! /bin/sh

# common functions for all shells used

# USEFUL FUNCTIONS #
extract () {
    if [ -f "$1" ] ; then
    case "$1" in
        *.tar.bz2)   tar xvjf "$1"        ;;
        *.tar.gz)    tar xvzf "$1"        ;;
        *.tar.xz)    tar xvJf "$1"        ;;
        *.bz2)       bunzip2 "$1"         ;;
        *.rar)       unrar e "$1"         ;;
        *.gz)        pigz -d "$1"         ;;
        #*.gz)        gunzip "$1"          ;;
        *.tar)       tar xvf "$1"         ;;
        *.tbz2)      tar xvjf "$1"        ;;
        *.tgz)       tar xvzf "$1"        ;;
        *.txz)       tar xvJf "$1"        ;;
        *.zip)       unzip "$1"           ;;
        *.Z)         uncompress "$1"      ;;
        *.7z)        7z x "$1"            ;;
        *.xz)        xz -d -T 0 "$1"      ;;
        *)           echo "don't know how to extract '$1'..." ;;
    esac
    else
        echo "'$1' is not a valid file!"
    fi
}

mkcd () {
	mkdir "$1"
	cd "$1" || return
}

mdv () {
	markdown "$1" | "$TUI_BROWSER" -dump | less
}

mkalias () {
	echo alias "$1"=\'"$2"\'
}

PRJ_DIR="$HOME/prj_dir"
# Usage: prj <project name>
# project directory set via PRJ_DIR env variable
# File format: <project name> </path/to/project>
# TODO: optional command to run on changing into the
#       project directory
prj () {
	local prj
	prj="$1"
	if [ "$prj" = ls ] ; then
		cat "$PRJ_DIR"
	else
		local prj_loc
		prj_loc=$(grep "$prj" "$PRJ_DIR" | cut -d ' ' -f 2)
		eval "prj_loc=$prj_loc"

		cd "$prj_loc" || echo "ERROR: $prj_loc does not exist!"
	fi
}

toggle_bat_conservation () {
	local switch
	switch="/sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode"
	local current
	current=$(cat "$switch")

	if [ "$current" = "0" ] ; then
		echo "1" | sudo tee "$switch"
	elif [ "$current" = "1" ] ; then
		echo "0" | sudo tee "$switch"
	fi
}

