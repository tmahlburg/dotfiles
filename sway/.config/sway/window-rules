# all windows floating by default
for_window [app_id=".*"] floating enable
for_window [title=".*"] floating enable
for_window [class=".*"] floating enable
for_window [instance=".*"] floating enable

for_window [title="Bild-in-Bild"] floating enable
for_window [title="Waydroid"] floating enable
for_window [app_id="Alacritty"] opacity 0.85
for_window [app_id="Alacritty"] blur enable
for_window [app_id="Alacritty"] blur_radius 10

layer_effects "panel" corner_radius 5
layer_effects "notifications" corner_radius 5; shadows enable; shadows_blur_radius 1; shadows_color #000000FF; shadow_offset 10 10
